<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <x:Double x:Key="Gap">8</x:Double>
    <x:Double x:Key="CardCornerRadius">10</x:Double>
    <x:Double x:Key="ThinCardCornerRadius">10</x:Double>
    <CornerRadius x:Key="ButtonCardCornerRadius">10, 0, 0, 10</CornerRadius>

    <Shadow x:Key="CardShadow"
            Brush="Black"
            Offset="0,0" 
            Radius="4"
            Opacity="0.25">
    </Shadow>

    <Color x:Key="TextCardBackgroundColorDark">#0D3B4F74</Color>
    <Color x:Key="TextCardBackgroundColorLight">#0D3B4F74</Color>

    <x:Double x:Key="GrayButtonBorderWidth">2</x:Double>
    <x:Int32 x:Key="ButtonCornerRadius">24</x:Int32>
    <x:Double x:Key="ButtonHeight">48</x:Double>

    <x:String x:Key="TransactionAnalyzerPalletCallNameSubstitution">Call details</x:String>
    <x:Boolean x:Key="DisplayNetworks">false</x:Boolean>
    <x:String x:Key="DefaultEndpoints">[XcavatePaseo, Polkadot]</x:String>

    <x:String x:Key="PrimaryButtonIcon">xcavatexwhite.png</x:String>
    
    <x:String x:Key="Location">UK</x:String>
    <x:String x:Key="CurrencyFormat">{0:0}</x:String>
    <x:String x:Key="ButtonFontFamily">XcavateFont</x:String>

    
</ResourceDictionary>
