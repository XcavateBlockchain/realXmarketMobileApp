<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:xcavate="clr-namespace:PlutoFramework.Components.Xcavate;assembly=PlutoFramework"
                    xmlns:card="clr-namespace:PlutoFramework.Components.Card;assembly=PlutoFramework"
                    x:Class="XcavateMobileApp.Templates.TopNavigationBar">
    <x:Double x:Key="TopNavigationBarHeight">65</x:Double>

    <ControlTemplate x:Key="TopNavigationBarTemplate">
        <xcavate:PageBottomBarView
                                    Padding="10"
                                    ColumnSpacing="10">
            <xcavate:PageBottomBarView.ColumnDefinitions>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="35"/>
            </xcavate:PageBottomBarView.ColumnDefinitions>

            <Border HeightRequest="35"
            WidthRequest="35"
            Grid.Column="0"
            BackgroundColor="#1A4E4E4E"
            StrokeThickness="0"
            Padding="5"
            >
                <Image HeightRequest="25"
               WidthRequest="25"
                Source="xcavatebackarrow.png" />

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="17.5" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}"/>

                </Border.GestureRecognizers>

            </Border>

            <Label FontSize="14"
           Grid.Column="1"
           HorizontalTextAlignment="Start"
           VerticalTextAlignment="Center"
           TextColor="#4E4E4E"
           LineBreakMode="TailTruncation">
                <Label.FormattedText>
                    <FormattedString>
                        <Span FontAttributes="Bold"
                              Text="{TemplateBinding Title}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Border HeightRequest="35"
                    WidthRequest="35"
                    Grid.Column="2"
                    BackgroundColor="#1A4E4E4E"
                    StrokeThickness="0"
                    Padding="5"
                    IsVisible="{Binding Extra2IsVisible}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="17.5" />
                </Border.StrokeShape>
                <Image HeightRequest="25"
                       WidthRequest="25"
                       Source="{TemplateBinding Extra2Image}"/>

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{TemplateBinding Extra2Command}"/>

                </Border.GestureRecognizers>

            </Border>


            <Border HeightRequest="35"
                    WidthRequest="35"
                    Grid.Column="3"
                    BackgroundColor="#1A4E4E4E"
                    StrokeThickness="0"
                    Padding="5"
                    IsVisible="{Binding Extra1IsVisible}">
                
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="17.5" />
                </Border.StrokeShape>
                <Image HeightRequest="25"
                       WidthRequest="25"
                       Source="{TemplateBinding Extra1Image}"/>

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{TemplateBinding Extra1Command}"/>

                </Border.GestureRecognizers>

            </Border>

            <card:TopPillBackgroundView Grid.ColumnSpan="4" HeightRequest="65" TranslationY="-65" Margin="-10" />
        </xcavate:PageBottomBarView>
    </ControlTemplate>
</ResourceDictionary>