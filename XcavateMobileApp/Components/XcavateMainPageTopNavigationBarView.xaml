<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             AbsoluteLayout.LayoutBounds="0.5, 0, 1, 65"
             AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
             xmlns:xcavate="clr-namespace:PlutoFramework.Components.Xcavate;assembly=PlutoFramework"
             x:Class="XcavateMobileApp.Components.XcavateMainPageTopNavigationBarView">
    <xcavate:PageBottomBarView
        Padding="10"
        ColumnSpacing="10">
        <xcavate:PageBottomBarView.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="35"/>
        </xcavate:PageBottomBarView.ColumnDefinitions>

        <Image HeightRequest="45"
               Grid.Column="0"
               Source="realxmarket.png"
               
            />



        <Border HeightRequest="35"
                    WidthRequest="35"
                     Grid.Column="2"
                    BackgroundColor="#1A4E4E4E"
                    StrokeThickness="0"
                    Padding="5"
    >
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="17.5" />
            </Border.StrokeShape>
            <Image HeightRequest="25"
               WidthRequest="25"
                   Source="xcavateemail.png"/>

            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding OpenMessagingCommand}"/>
            </Border.GestureRecognizers>

        </Border>

        <Border HeightRequest="35"
                WidthRequest="35"
                Grid.Column="3"
                BackgroundColor="#1A4E4E4E"
                StrokeThickness="0"
                Padding="5"
>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="17.5" />
            </Border.StrokeShape>
            <Image HeightRequest="25"
               WidthRequest="25"
                   Margin="0, 0, 2, 0"
               Source="xcavateqr.png"
               />

            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding OpenQrScannerCommand}"/>

            </Border.GestureRecognizers>

        </Border>

        <Border HeightRequest="35"
            WidthRequest="35"
            Grid.Column="4"
            BackgroundColor="#1A4E4E4E"
            StrokeThickness="0"
            Padding="5"
    >
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="17.5" />
            </Border.StrokeShape>
            <Image HeightRequest="25"
                   WidthRequest="25"
                   Margin="0, 0, 2, 0"
                   Source="xcavatemenu.png"
                   />

            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding OpenMenuCommand}"/>

            </Border.GestureRecognizers>

        </Border>
    </xcavate:PageBottomBarView>
</ContentView>
